package com.patterns.usingstaticmethod;

public class NumberTriangleProgram {
	
	
	public static void pattern1() {
		System.out.println("==============Number-increasing Pyramid Pattern======================");

		for (int i = 1; i <= 6; i++) {
			for (int j = 1; j <= 6 - i; j++) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i; j++) {
				System.out.print(i +" ");
			}

			System.out.println();

		}
	}
	
	
	public static void pattern1(int i) {
		System.out.println("===============Number triangle Pattern==============");

		// outer loop to handle number of rows
		for ( i = 1; i <= 6; i++) {
			// inner loop to print space
			for (int j = 1; j <= 6 - i; j++) {
				System.out.print(" ");
			}
			// inner loop to print star
			for (int j = 1; j <= i; j++) {
				System.out.print(i + " ");
			}
			// print new line for each row
			System.out.println();
		}
	}
	
	
	public  int Pattern2(int i,int j) {
		System.out.println("=================Number-increasing reverse Pyramid Pattern======================");

		for ( i = 6; i >= 1; i--) {
			for ( j = 1; j <= i; j++)
				System.out.print(j + " ");
			System.out.println();

			// System.out.print(" ");
		}
		System.out.print(" ");

		System.out.println(" ");
		return 0;
	}
	
	
	

}
