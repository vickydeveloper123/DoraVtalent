package com.variables.methods;

import java.util.Scanner;

public class methods {

	public static void main(String[] args) {

		Scanner n = new Scanner(System.in);
		System.out.println("Please enter the multiplication table  to display===>");
		int value = n.nextInt();
		methods reference = new methods();
		reference.multiplicationTable(value);// Here as it is non static variable we can access through object reference but not through class name.
		System.out.println("Below method is static we have acessed through class name");
		methods.multiplicationTablee(value);// As it is static method we can acess directly through the class name.

	}

	public void multiplicationTable(int n) {

		int iterations = 0;
		int resultantvalue;
		System.out.println("Multiplication Table===>");
		for (iterations = 1; iterations <= 10; iterations++) {
			resultantvalue = n * iterations;
			System.out.printl(n+" * "+iterations+  "= "+resultantvalue);
		}

	}
	
	public  static void multiplicationTablee(int n) {

		int iterations = 0;
		int resultantvalue;
		System.out.println("Multiplication Table===>");
		for (iterations = 1; iterations <= 10; iterations++) {
			resultantvalue = n * iterations;
			System.out.println(n+" * "+iterations+  "= "+resultantvalue);
		}

	}

}
