package com.arrays.usingstaticmethods;

public class ArraysExample1 {
	
	public void method1(int[] array) {
	int arrayy[] = new int[3];// n-1  3-1 = 2 0,1,2,
	array[0] = 123;
	array[1] = 234;
	array[2] = 345;
	// array[3]=456;
	System.out.println("index 0=>"+array[0]);
	System.out.println("index 1=>"+array[1]);

	System.out.println("index 2=>"+array[2]);
	
	//System.out.println("index 3s=>"+array[3]);
	
 //	System.out.println(array);
	
	System.out.println("========String of Array ===========");
	
	String[] stringReference=new String[3];
	stringReference[0]="Dora Sri Vignesh(Software Architect)";
	stringReference[1]="Akhila(Software developer)";
	stringReference[0]="Sanju(Software Engineer)";
	stringReference[2]="Mounika(Manager)";

	
	System.out.println(stringReference);// [Ljava.lang.String;@67f89fa3

	System.out.println("index 0=>"+stringReference[0]);
	System.out.println("index 1=>"+stringReference[1]);

	System.out.println("index 2=>"+stringReference[2]);
	}

}
