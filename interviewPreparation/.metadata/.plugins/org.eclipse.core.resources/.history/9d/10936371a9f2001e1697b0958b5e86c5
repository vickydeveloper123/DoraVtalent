package com.arrays.usingstaticmethods;

import java.util.Scanner;

public class ArrayExample2 {
	
	
	public static void main(String[] args) {
		ArrayExample2 reference=new ArrayExample2();
		reference.method1(null);		
		
	}

	public static void method1(int[] n) {

		Scanner scanner = new Scanner(System.in);

		System.out.println("Please enter your Array Value ===>");

		int size = scanner.nextInt();

		int[] arrayValues = new int[size];

		// input
		for (int i = 0; i < size; i++) {
			arrayValues[i] = scanner.nextInt();
		}

// output
		for (int i = 0; i < size; i++) {
			System.out.println("These are the output values  storing in the array");
			System.out.println(arrayValues[i]);
		}

	}
}
