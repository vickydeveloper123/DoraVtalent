package com.patterns;

public class ArrawPrinting {

	public void pattern1() {

		for (int i = 0; i <= 5; i++) {
			for (int j = i; j <= 5; j++) {
				System.out.print("*");

			}
			System.out.println("");

		}
	}

	public void pattern2() {
		for (int i = 1; i <= 5; i++) {
			for (int j = i; j <= 5; j--) {
				System.out.println("*");

			}
			System.out.println("");

		}
	}

	public static void main(String[] args) {
		ArrawPrinting reference = new ArrawPrinting();
		reference.pattern1();
		System.out.println("****************************************************************");
		reference.pattern2();

		System.out.println("-----------------------------------------------------------------");

		System.out.println("Inverted Traingle");

		for (int i = 1; i <= 5; i++) {
			for (int j = i; j <= i; j++) {
				System.out.print("*");

			}
			System.out.println("");

			System.out.println("============================");

			for (i = 5; i >= 0; i--) {
				for (int j = i; j <= 5; j++) {
					System.out.print("*");

				}
				System.out.println("");

			}
			for (i = 0; i <= 5; i++) {
				for (int j = 5; j > 0; j--) {
					// System.out.print("*");

				}
				System.out.println("");

			}

		}
	}
}
